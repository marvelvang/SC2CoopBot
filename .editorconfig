# Top-most EditorConfig file
root = true

# Standardregeln f端r alle Dateien
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Spezielle Regeln f端r C#-Dateien
[*.cs]
indent_style = space
indent_size = 4

# Spezielle Regeln f端r Markdown-Dateien
[*.md]
trim_trailing_whitespace = false

# Spezielle Regeln f端r JSON/YAML
[*.json]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2